<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFF"
    tools:context=".CardDrawActivity" >

    <ImageView
        android:id="@+id/cardImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="66dp"
        android:src="@drawable/back" />

    <Button
        android:id="@+id/guessHigher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardImage"
        android:layout_marginTop="36dp"
        android:layout_toRightOf="@+id/cardImage"
        android:background="#FFFFFF"
        android:onClick="PickHigher"
        android:text="@string/guess_higher_card" />

    <Button
        android:id="@+id/guessLower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/cardImage"
        android:layout_below="@+id/cardImage"
        android:layout_marginRight="65dp"
        android:background="#FFFFFF"
        android:onClick="PickLower"
        android:text="@string/guess_lower_card" />

</RelativeLayout>